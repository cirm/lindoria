{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "plugin:lodash-fp/recommended"
  ],
  "plugins": [
    "mocha",
    "react",
    "lodash-fp"
  ],
  "rules": {
    "mocha/no-exclusive-tests": 2,
    "mocha/handle-done-callback": 2,
    "mocha/no-synchronous-tests": 2,
    "react/prefer-stateless-function": [
      2,
      {
        "ignorePureComponents": true
      }
    ]
  }
}
